#!/bin/bash

DOCKER_ETC="/etc/docker/"
DOCKER_DATA="/home/docker/"
DOCKER_BIN="/home/wago-docker/"
CONFIG_DOCKER="/etc/config-tools/config_docker"
GET_DOCKER_CONFIG="/etc/config-tools/get_docker_config"

# clean up files that are generated by dockerd
if [ -z "$DESTDIR" ]; then
	rm -rf "$DOCKER_ETC"

	umount -fl "$DOCKER_DATA"
	rm -rf "$DOCKER_DATA"
	
	rm -rf "$DOCKER_BIN"
	
	rm -rf "$CONFIG_DOCKER"
	rm -rf "$GET_DOCKER_CONFIG"
fi

exit 0

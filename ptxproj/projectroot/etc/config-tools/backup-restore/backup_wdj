#-----------------------------------------------------------------------------#
#-----------------------------------------------------------------------------#
# Script:   settings_backup_wdj
#
# Brief:    Save wdj configuration settings to stdout or restore 
#           them from stdin.
#
# Author:   MWW: WAGO GmbH & Co. KG
# Author:   SD: WAGO GmbH & Co. KG
#-----------------------------------------------------------------------------#

# load common backup/restore functions
if [[ ! -f "/usr/sbin/settings_backup_lib" ]]; then
    echo "settings_backup_lib missing"
    exit 64
fi

# wdj config 
WDJ_CONFIG_DIR="/etc/wdj"
WDJ_CONFIG_TAR="/home/wdj-config.tar"


source /usr/sbin/settings_backup_lib

RESULT=0
OPERATION=${1:-}
BACKUP_FILE=${2:-}
#-------------------------------------------------------------
# restore of settings
#-------------------------------------------------------------
if [[ "$OPERATION" = "--restore" ]]; then
    
    # read backup file from stdin
    while IFS= read -r line; do
        # get parameter key
        key=${line%%=*}
        # get parameter value
        value=${line#*=}
        if [[ "$key" = wdj-conf ]]; then
            base64 -d <<< "$value" >> "$WDJ_CONFIG_TAR"
        fi
    done <"$BACKUP_FILE"
    tar -xf "$WDJ_CONFIG_TAR" -C /
    rm "$WDJ_CONFIG_TAR"
#-------------------------------------------------------------
# backup settings
#-------------------------------------------------------------
elif [[ "$OPERATION" = "--save" ]]; then
    tar cf "$WDJ_CONFIG_TAR" "$WDJ_CONFIG_DIR"
    BackupKnownFile wdj-conf "$WDJ_CONFIG_TAR" >> "$BACKUP_FILE"
    rm "$WDJ_CONFIG_TAR"
    RESULT=$?
elif [[ "$OPERATION" = "--param-count" ]]; then
		echo 1
		RESULT=$?
else
    echo
    echo "* Save wdj configuration settings to backup-file or restore them from backup-file *"
    echo
    echo "backup_wdj --save <backup-file>      backup wdj state"
    echo "backup_wdj --restore <backup-file>   restore wdj state"
    echo "backup_wdj --param-count             get number of wdj parameters to save"
    echo
fi

exit $RESULT